<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background_dialog"
    android:orientation="vertical"
    android:padding="@dimen/indent_normal">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/indent_normal"
        android:contentDescription="@string/empty"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_room_24"
        app:tint="?attr/colorPrimary" />


    <TextView
        android:id="@+id/explanation_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/location_permission_explanation"
        android:textAppearance="@style/TextAppearance.Primary.Subtitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/request_location_permission_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ok" />

</LinearLayout>