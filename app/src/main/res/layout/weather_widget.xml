<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="@dimen/indent_normal">

    <!--TODO Переделать!-->

    <ImageView
        android:id="@+id/weather_icon_widget_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/empty"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_weather_app_icon" />

    <TextView
        android:id="@+id/weather_temperature_widget_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/weather_icon_widget_image_view"
        android:layout_alignBottom="@id/weather_icon_widget_image_view"
        android:layout_toEndOf="@id/weather_icon_widget_image_view"
        android:gravity="center"
        android:text="Загрузка..."
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forecast_date_widget_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_icon_widget_image_view"
        android:layout_alignStart="@id/weather_icon_widget_image_view"
        android:layout_margin="@dimen/indent_small"
        android:gravity="center"
        android:text="11.11, 20:44"
        />

</RelativeLayout>